<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);CS1591</NoWarn>

    <!-- NuGet Package Metadata -->
    <PackageId>LibreSpeed.NET</PackageId>
    <Version>1.0.0</Version>
    <Authors>MemphiZ</Authors>
    <Description>A .NET client library for LibreSpeed speed test servers. Measure download speed, upload speed, ping, and jitter against self-hosted or public LibreSpeed servers.</Description>
    <PackageTags>speedtest;librespeed;bandwidth;network;ping;latency</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Memphizzz/LibreSpeed.NET</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Memphizzz/LibreSpeed.NET</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

</Project>
